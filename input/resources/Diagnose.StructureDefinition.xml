<?xml version="1.0" encoding="utf-8"?>
<StructureDefinition xmlns="http://hl7.org/fhir">
  <id value="Diagnose" />
  <url value="http://fhir.scwjxx.cn/SiChuan/StructureDefinition/Diagnose" />
  <name value="Diagnose" />
  <title value="诊断信息" />
  <status value="draft" />
  <description value="诊断信息，从医学角度对人们的精神和体质状态作出的判断。对正常人的健康状态、劳动能力和某一特定的生理过程的判断；司法部门判定血缘关系和伤害性质也属诊断。用来认识疾病的诊断最广泛，是治疗、预后、预防的前提。" />
  <fhirVersion value="4.0.0" />
  <mapping>
    <identity value="workflow" />
    <uri value="http://hl7.org/fhir/workflow" />
    <name value="Workflow Pattern" />
  </mapping>
  <mapping>
    <identity value="sct-concept" />
    <uri value="http://snomed.info/conceptdomain" />
    <name value="SNOMED CT Concept Domain Binding" />
  </mapping>
  <mapping>
    <identity value="v2" />
    <uri value="http://hl7.org/v2" />
    <name value="HL7 v2 Mapping" />
  </mapping>
  <mapping>
    <identity value="rim" />
    <uri value="http://hl7.org/v3" />
    <name value="RIM Mapping" />
  </mapping>
  <mapping>
    <identity value="w5" />
    <uri value="http://hl7.org/fhir/fivews" />
    <name value="FiveWs Pattern Mapping" />
  </mapping>
  <mapping>
    <identity value="sct-attr" />
    <uri value="http://snomed.org/attributebinding" />
    <name value="SNOMED CT Attribute Binding" />
  </mapping>
  <kind value="resource" />
  <abstract value="false" />
  <type value="Condition" />
  <baseDefinition value="http://hl7.org/fhir/StructureDefinition/Condition" />
  <derivation value="constraint" />
  <differential>
    <element id="Condition">
      <path value="Condition" />
      <short value="诊断信息" />
      <definition value="从医学角度对人们的精神和体质状态作出的判断。对正常人的健康状态、劳动能力和某一特定的生理过程的判断；司法部门判定血缘关系和伤害性质也属诊断。用来认识疾病的诊断最广泛，是治疗、预后、预防的前提。" />
    </element>
    <element id="Condition.identifier">
      <path value="Condition.identifier" />
      <slicing>
        <discriminator>
          <type value="value" />
          <path value="type" />
        </discriminator>
        <rules value="open" />
      </slicing>
      <short value="业务ID" />
      <definition value="描述该信息的的业务ID，整个生命周期中保持不变。" />
      <type>
        <code value="Identifier" />
        <profile value="http://fhir.scwjxx.cn/SiChuan/StructureDefinition/Identifier" />
      </type>
    </element>
    <element id="Condition.identifier:DiagnoseCode">
      <path value="Condition.identifier" />
      <sliceName value="DiagnoseCode" />
      <short value="诊断业务编码" />
      <definition value="诊断业务编码" />
      <max value="1" />
    </element>
    <element id="Condition.identifier:otherIdentifier">
      <path value="Condition.identifier" />
      <sliceName value="otherIdentifier" />
      <short value="其他业务代码" />
      <definition value="其他业务代码" />
    </element>
    <element id="Condition.clinicalStatus">
      <path value="Condition.clinicalStatus" />
      <short value="诊断状态" />
      <definition value="用编码形式表示此状况的当前状态，如   当前状态、复发、缓解、治疗好等。" />
      <type>
        <code value="CodeableConcept" />
        <profile value="http://fhir.scwjxx.cn/SiChuan/StructureDefinition/CodeableConcept" />
      </type>
    </element>
    <element id="Condition.clinicalStatus.extension">
      <path value="Condition.clinicalStatus.extension" />
      <slicing>
        <discriminator>
          <type value="value" />
          <path value="url" />
        </discriminator>
        <rules value="open" />
      </slicing>
    </element>
    <element id="Condition.clinicalStatus.extension:clinicalStatus">
      <path value="Condition.clinicalStatus.extension" />
      <sliceName value="clinicalStatus" />
      <max value="1" />
      <type>
        <code value="Extension" />
        <profile value="http://fhir.scwjxx.cn/SiChuan/StructureDefinition/resource-status" />
      </type>
      <binding>
        <strength value="required" />
        <description value="诊断状态" />
        <valueSet value="http://fhir.scwjxx.cn/Sichuan/ValueSet/condition-status-vs" />
      </binding>
    </element>
    <element id="Condition.verificationStatus">
      <path value="Condition.verificationStatus" />
      <short value="验证状态" />
      <definition value="表示验证状态，如：初诊、暂时存在、确诊、错误的等。" />
      <type>
        <code value="CodeableConcept" />
        <profile value="http://fhir.scwjxx.cn/SiChuan/StructureDefinition/CodeableConcept" />
      </type>
    </element>
    <element id="Condition.verificationStatus.extension">
      <path value="Condition.verificationStatus.extension" />
      <slicing>
        <discriminator>
          <type value="value" />
          <path value="url" />
        </discriminator>
        <rules value="open" />
      </slicing>
    </element>
    <element id="Condition.verificationStatus.extension:verificationStatus">
      <path value="Condition.verificationStatus.extension" />
      <sliceName value="verificationStatus" />
      <max value="1" />
      <type>
        <code value="Extension" />
        <profile value="http://fhir.scwjxx.cn/SiChuan/StructureDefinition/resource-status" />
      </type>
      <binding>
        <strength value="required" />
        <description value="验证状态" />
        <valueSet value="http://fhir.scwjxx.cn/Sichuan/ValueSet/condition-ver-status-vs" />
      </binding>
    </element>
    <element id="Condition.category">
      <path value="Condition.category" />
      <short value="类别" />
      <definition value="类别，描述该资源的类别，可以是临床诊断也可以是 列表问题（描述患者出现的若干症状）problem-list-item | encounter-diagnosis &#xD;&#xA;该出固定为 临床诊断" />
      <max value="0" />
    </element>
    <element id="Condition.category.coding.code">
      <path value="Condition.category.coding.code" />
      <fixedCode value="problem-list-item" />
    </element>
    <element id="Condition.severity">
      <path value="Condition.severity" />
      <short value="严重程度" />
      <definition value="临床医生对病情严重程度的主观评估。" />
      <comment value="在可能的情况下，最好使用术语对严重性进行编码。" />
      <type>
        <code value="CodeableConcept" />
        <profile value="http://fhir.scwjxx.cn/SiChuan/StructureDefinition/CodeableConcept" />
      </type>
      <binding>
        <extension url="http://hl7.org/fhir/StructureDefinition/elementdefinition-bindingName">
          <valueString value="ConditionSeverity" />
        </extension>
        <strength value="preferred" />
        <description value="由临床医生对病情严重程度的主观评估。" />
        <valueSet value="http://fhir.scwjxx.cn/Sichuan/ValueSet/condition-severity-vs" />
      </binding>
    </element>
    <element id="Condition.code">
      <path value="Condition.code" />
      <short value="诊断编码" />
      <definition value="ICD-10 诊断编码" />
      <min value="1" />
      <type>
        <code value="CodeableConcept" />
        <profile value="http://fhir.scwjxx.cn/SiChuan/StructureDefinition/CodeableConcept" />
      </type>
      <binding>
        <extension url="http://hl7.org/fhir/StructureDefinition/elementdefinition-bindingName">
          <valueString value="ConditionKind" />
        </extension>
        <strength value="example" />
        <description value="诊断疾病或诊断的鉴别。" />
        <valueSet value="http://fhir.scwjxx.cn/Sichuan/ValueSet/diagnosis-code-vs" />
      </binding>
    </element>
    <element id="Condition.bodySite">
      <path value="Condition.bodySite" />
      <short value="部位" />
      <definition value="症状出现的部位 ，" />
      <type>
        <code value="CodeableConcept" />
        <profile value="http://fhir.scwjxx.cn/SiChuan/StructureDefinition/CodeableConcept" />
      </type>
      <binding>
        <extension url="http://hl7.org/fhir/StructureDefinition/elementdefinition-bindingName">
          <valueString value="BodySite" />
        </extension>
        <strength value="example" />
        <description value="描述解剖位置的代码" />
        <valueSet value="http://fhir.scwjxx.cn/Sichuan/ValueSet/body-site-vs" />
      </binding>
    </element>
    <element id="Condition.subject">
      <path value="Condition.subject" />
      <short value="患者" />
      <definition value="指示与状态记录相关联的患者或组。" />
      <type>
        <code value="Reference" />
        <profile value="http://fhir.scwjxx.cn/SiChuan/StructureDefinition/Reference" />
      </type>
    </element>
    <element id="Condition.encounter">
      <path value="Condition.encounter" />
      <short value="相关就诊活动" />
      <definition value="创建此诊断/主诉/体征/症状的过程中或与此记录的创建紧密相关的医疗事件。" />
      <type>
        <code value="Reference" />
        <profile value="http://fhir.scwjxx.cn/SiChuan/StructureDefinition/Reference" />
      </type>
    </element>
    <element id="Condition.onset[x]">
      <path value="Condition.onset[x]" />
      <max value="0" />
    </element>
    <element id="Condition.abatement[x]">
      <path value="Condition.abatement[x]" />
      <max value="0" />
    </element>
    <element id="Condition.recordedDate">
      <path value="Condition.recordedDate" />
      <short value="记录诊断的日期" />
      <definition value="描述该诊断资源被详细记录的日期" />
    </element>
    <element id="Condition.recorder">
      <path value="Condition.recorder" />
      <short value="记录者" />
      <definition value="描述记录该资源的人员信息，在这里一般指医生和医生角色。" />
      <type>
        <code value="Reference" />
        <profile value="http://fhir.scwjxx.cn/SiChuan/StructureDefinition/Reference" />
        <targetProfile value="http://fhir.scwjxx.cn/SiChuan/StructureDefinition/Patient" />
        <targetProfile value="http://fhir.scwjxx.cn/SiChuan/StructureDefinition/Practitioner" />
        <targetProfile value="http://fhir.scwjxx.cn/SiChuan/StructureDefinition/PractitionerRole" />
        <targetProfile value="http://fhir.scwjxx.cn/SiChuan/StructureDefinition/RelatedPerson" />
        <targetProfile value="http://fhir.scwjxx.cn/SiChuan/StructureDefinition/Practitioner" />
      </type>
    </element>
    <element id="Condition.asserter">
      <path value="Condition.asserter" />
      <short value="确定诊断者" />
      <definition value="下达诊断的医生" />
      <type>
        <code value="Reference" />
        <profile value="http://fhir.scwjxx.cn/SiChuan/StructureDefinition/Reference" />
        <targetProfile value="http://fhir.scwjxx.cn/SiChuan/StructureDefinition/Practitioner" />
        <targetProfile value="http://fhir.scwjxx.cn/SiChuan/StructureDefinition/PractitionerRole" />
      </type>
    </element>
    <element id="Condition.stage">
      <path value="Condition.stage" />
      <short value="阶段评估" />
      <definition value="临床阶段或状况的评估，为该种诊断/主诉/体征/症状提供论据" />
    </element>
    <element id="Condition.stage.summary">
      <path value="Condition.stage.summary" />
      <short value="阶段" />
      <definition value="对阶段的简单总结，如“第三阶段”。阶段的确定是疾病特异性的。" />
      <type>
        <code value="CodeableConcept" />
        <profile value="http://fhir.scwjxx.cn/SiChuan/StructureDefinition/CodeableConcept" />
      </type>
      <binding>
        <extension url="http://hl7.org/fhir/StructureDefinition/elementdefinition-bindingName">
          <valueString value="ConditionStage" />
        </extension>
        <strength value="example" />
        <description value="描述疾病分期的代码(如癌症分期)。" />
        <valueSet value="http://fhir.scwjxx.cn/Sichuan/ValueSet/condition-stage-vs" />
      </binding>
    </element>
    <element id="Condition.stage.assessment">
      <path value="Condition.stage.assessment" />
      <definition value="指进行分期评估所依据的证据的正式记录。可以是一份观测、可以是一个报告或者是临床反映。" />
      <type>
        <code value="Reference" />
        <profile value="http://fhir.scwjxx.cn/SiChuan/StructureDefinition/Reference" />
      </type>
    </element>
    <element id="Condition.stage.type">
      <path value="Condition.stage.type" />
      <short value="分期种类" />
      <definition value="分期的种类，如病理分期或临床分期。" />
      <type>
        <code value="CodeableConcept" />
        <profile value="http://fhir.scwjxx.cn/SiChuan/StructureDefinition/CodeableConcept" />
      </type>
      <binding>
        <extension url="http://hl7.org/fhir/StructureDefinition/elementdefinition-bindingName">
          <valueString value="ConditionStageType" />
        </extension>
        <strength value="example" />
        <description value="描述疾病分期类型的代码(如临床或病理)。" />
        <valueSet value="http://fhir.scwjxx.cn/Sichuan/ValueSet/condition-stage-type-vs" />
      </binding>
    </element>
    <element id="Condition.evidence">
      <path value="Condition.evidence" />
      <short value="理论依据" />
      <definition value="作为病情验证状态基础的支持性证据/表现，如证实或驳斥病情的证据。&#xD;&#xA;作为该判断的理论依据，证据可以是编码的症状/表现的简单列表，或者是对观察结果或正式评估的引用，或者两者都有。&#xD;&#xA;code 或者detail 可以都存在也可以只存在一个，或者都不填。" />
      <comment value="证据可以是一个简单的编码症状/表现列表，或参考观察或正式评估，或两者兼之。" />
    </element>
    <element id="Condition.evidence.code">
      <path value="Condition.evidence.code" />
      <short value="编码症状" />
      <definition value="导致这种情况被记录下来的一种表现或症状。以编码集值的形式记录。" />
      <type>
        <code value="CodeableConcept" />
        <profile value="http://fhir.scwjxx.cn/SiChuan/StructureDefinition/CodeableConcept" />
      </type>
      <binding>
        <extension url="http://hl7.org/fhir/StructureDefinition/elementdefinition-bindingName">
          <valueString value="ManifestationOrSymptom" />
        </extension>
        <strength value="example" />
        <description value="描述一种情况的表现或症状的代码。" />
        <valueSet value="http://fhir.scwjxx.cn/Sichuan/ValueSet/manifestation-or-symptom-vs" />
      </binding>
    </element>
    <element id="Condition.evidence.detail">
      <path value="Condition.evidence.detail" />
      <type>
        <code value="Reference" />
        <profile value="http://fhir.scwjxx.cn/SiChuan/StructureDefinition/Reference" />
      </type>
    </element>
    <element id="Condition.note">
      <path value="Condition.note" />
      <short value="备注" />
      <definition value="关于病情的附加信息。这是一个描述病情、诊断和预后的一般注释/注释条目。" />
      <comment value="关于病情的附加信息。对于没有结构化注释的系统，它们可以在没有作者或时间的情况下简单地传递单个注释。这个元素可能需要包含在叙述中，因为它可能会修改信息，这是一个描述病情、诊断和预后的一般注释/注释条目。" />
      <type>
        <code value="Annotation" />
        <profile value="http://fhir.scwjxx.cn/SiChuan/StructureDefinition/Annotation" />
      </type>
    </element>
  </differential>
</StructureDefinition>